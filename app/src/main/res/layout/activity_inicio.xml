<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5fae6"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.corposa.corposa.Inicio">

        <ImageView
        android:layout_width="fill_parent"
        android:layout_height="310px"
        android:scaleType="fitCenter"
        android:id="@+id/imageView"
        android:src="@drawable/slider3"
       />

    <TextView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CORPO S/A"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" />

    <TextView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Especializada em emagrecimento e estética, a Corpo S/A compartilha a teoria de que é possível construir um mundo mais feliz se cada indivíduo tiver a oportunidade de sentir realizado e satisfeito consigo mesmo. Para que isso se tornasse possível, cada detalhe dos pacotes de tratamento oferecidos pela Corpo S/A foram minuciosamente pensados, testados e moldados para atender às mais diversas exigências, com um compromisso em destaque: o Resultado!"
        android:id="@+id/textView2" />

</LinearLayout>
</ScrollView>
</LinearLayout>